include <stdlib.h>
#include <time.h>

/**
*main - entry point
*
*Return: string
*/

/* betty style doc for function main goes there */

int main(void)
{
	int n;

	srand(time(0));
	n = rand() - RAND_MAX / 2;

	if (n = 0)
	printf("%d is zero", (n)); 
	else {
	if (n < 0)
	printf("%d is negative", (n));
	else
	printf("%d is positive", (n));
}
	/* your code goes there */
	
	return (0);
}
