#include "holberton.h"

/**
*print_diagonal - entry point
*
*@n: var
*
*Return: 0
*/

void print_diagonal(int n)

{

	int a;
	int b;

	if (n <= 0)
		_putchar('\n');
	else
	{
		for (a = 1; a <= n; a++)
		{
		for (b = 0; b <= a; b++)
				if (b > 1)
				_putchar(' ');
			}
		_putchar('\\');
		_putchar('\n');
		}
	}

}
